<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20dp"
        android:textDirection="inherit"
        android:background="@color/colorGrey"
        android:text="Daftar Menu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/colorAbu">
            <ImageView
                android:id="@+id/img_kat"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/makanan"/>
            <TextView
                android:layout_alignBottom="@id/img_kat"
                android:layout_marginLeft="45dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorGrey"
                android:text="Makanan"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_makanan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/list_layout">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>